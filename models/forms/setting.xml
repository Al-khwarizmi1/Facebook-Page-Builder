<form>
    <fieldset>
        <field
                        name="id"
                        type="hidden"
                />
        <field
                        name="setting_title"
                        type="text"
                        label="COM_FBPAGEBUILDER_SETTING_TITLE_LABEL"
                        description="COM_FBPAGEBUILDER_SETTING_TITLE_DESC"
                        size="40"
                        class="inputbox"
                        default=""
                />
        <field
                        name="api_id"
                        type="text"
                        label="COM_FBPAGEBUILDER_SETTING_API_LABEL"
                        description="COM_FBPAGEBUILDER_SETTING_API_DESC"
                        size="40"
                        class="inputbox"
                        default=""
                />

        <field
                        name="api_secret"
                        type="text"
                        label="COM_FBPAGEBUILDER_SETTING_APISEC_LABEL"
                        description="COM_FBPAGEBUILDER_SETTING_APISEC_DESC"
                        size="40"
                        class="inputbox"
                        default=""
                />
        <field
                        name="ordering"
                        type="text"
                        label="COM_FBPAGEBUILDER_SETTING_ORDER_LABEL"
                        description="COM_FBPAGEBUILDER_SETTING_ORDER_DESC"
                        size="5"
                        class="orderbox"
                        default=""
                />
        <field name="published" type="radio"
			label="COM_FBPAGEBUILDER_PUBLISHED_LABEL" description="COM_FBPAGEBUILDER_PUBLISHED_DESC"
			default="1"
		>
            <option value="1" >COM_FBPAGEBUILDER_REQUIRED_YES
            </option>
            <option value="0">COM_FBPAGEBUILDER_REQUIRED_NO
            </option>

        </field>
    </fieldset>
</form>