<form>
    <fieldset>
        <field
                        name="id"
                        type="hidden"
                />
        <field
                        name="title"
                        type="text"
                        label="COM_FBPAGEBUILDER_TITLE_LABEL"
                        description="COM_FBPAGEBUILDER_TITLE_DESC"
                        size="40"
                        class="inputbox"
                        default=""
                />
        <field
                        name="description"
                        type="textarea"
                        label="COM_FBPAGEBUILDER_DESCRIPTION_LABEL"
                        description="COM_FBPAGEBUILDER_DESCRIPTION_DESC"
                        rows="3"
                        class="textarea"
                        default=""
                />
        <field
                        name="content"
                        type="editor"
                        label="COM_FBPAGEBUILDER_TEMPLATECONTENT_LABEL"
                        description="COM_FBPAGEBUILDER_TEMPLATECONTENT_DESC"
                        width = "60%"
                        rows = "30"
                        class="inputbox"
                        default=""
                />
        <field name="published" type="radio"
			label="COM_FBPAGEBUILDER_PUBLISHED_LABEL" description="COM_FBPAGEBUILDER_PUBLISHED_DESC"
			default="0"
		>
            <option value="1" >COM_FBPAGEBUILDER_REQUIRED_YES
            </option>
            <option value="0">COM_FBPAGEBUILDER_REQUIRED_NO
            </option>

        </field>
    </fieldset>
</form>